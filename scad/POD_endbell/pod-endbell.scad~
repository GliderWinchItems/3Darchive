/* POD endbell
*/

dia_od = (3.75*25.4); // diameter (inside of bottle)

thick_bottom = 3;
thick_sides = 2;
height_sides = 5;
$fn = 100;

module ring()
{
  render()
  {
     // Base disc
     cylinder(h = 3, 
        r1 = (dia_od - thick_sides)/2, 
        r2 = dia_od/2, 
        center = false);

     // Sides with chamfer at bottom edge
     difference()
     {
        union()
        {
           translate([0,0,thick_bottom]) 
	      cylinder(h = height_sides, d = dia_od, center = false);
        }
        union()
        {
           cylinder(h = height_sides + 5, 
             d = (dia_od - thick_sides), 
             center = false);
           // Chamfer--

        }
     }
     // Inside fillet
     difference()
     {
        translate([0,0,thick_bottom])
           cylinder(h = 3,
              d = (dia_od - 2*thick_sides),
              center = false);
        translate([0,0,thick_bottom])
          cylinder(h = 3, 
              r2 = (dia_od - 4*thick_sides)/2, 
              r1 = (dia_od - 2*thick_sides)/2, 
              center = false);
     }
  }
}

module main()
{
   ring();
}
main();
